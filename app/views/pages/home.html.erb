<div class="slideshow_container">
  <div id="slideshow">
    <div class="elemnt"></div>
    <div class="elemnt1"></div>
    <div class="elemnt2"></div>
    <div class="elemnt3"></div>
    <div class="elemnt4"></div>
    <div class="elemnt5"></div>
  </div>
  <div class="banner">
  <div class="banner-content">
      <h1>DRONE_HUB</h1>
      <div class="search-container">
          <%= form_tag(drones_path, method: :get) do %>
            <%= text_field_tag :query, nil, placeholder: "Search..." %>
            <%= submit_tag "Rent a drone", class: "btn btn-primary btn-mg"%>
          <% end %>
      </div>
  </div>
  </div>
</div>

<div class="cards-container">
    <div class="row">
    <h2>Most Popular<h2>
      <% @drones.each do |drone| %>
      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="card-wrapper">
          <div class="card-image">
            <div class="card-category">
              <%= drone.category %>
            </div>
          </div>
          <div class="card-description">
            <h2>  <%= link_to drone.name, drone_path(drone), class: "link-text" %></h2>
            <h5> Pickup at <%= drone.location %></h5>
            <h6> $<%= drone.price %> per hour</h6>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <div class="cards-container">
    <div class="row">
    <h2> Delivery Drones <h2>
      <% @drones2.each do |drone| %>
      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="card-wrapper">
          <div class="card-image">
            <div class="card-category">
              <%= drone.category %>
            </div>
          </div>
          <div class="card-description">
            <h2>  <%= link_to drone.name, drone_path(drone), class: "link-text" %></h2>
            <h5> Pickup at <%= drone.location %></h5>
            <h6> $<%= drone.price %> per day</h6>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
